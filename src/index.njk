---
layout: page.njk
title: Setups
pagination:
  data: newstations
  alias: stations
  size: 50
permalink: "/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber }}/{% endif %}index.html"
eleventyNavigation:
  key: Setups Gallery
---
<div class="inline-flex my-3 md:my-6">
    {% set links = pagination.href %}
    {% if links.previous %}
    <a class="border border-black bg-white hover:bg-gray-100 font-bold py-2 px-4 no-underline" href="{{ links.previous }}">ðŸ‘ˆ Previous {{pagination.size}}</a>
    {% else %}
    <a class="border border-black hover:bg-gray-100 font-bold py-2 px-4 no-underline bg-gray-100 text-gray-400">ðŸ‘ˆ Previous {{pagination.size}}</a>
    {% endif %}
    {% if links.next %}
        <a class="border border-black bg-white hover:bg-gray-100 font-bold py-2 px-4 no-underline" href="{{ links.next }}">Next {{pagination.size}} ðŸ‘‰</a>
    {% else %}
        <a class="border border-black hover:bg-gray-100 font-bold py-2 px-4 no-underline bg-gray-100 text-gray-400">Next {{pagination.size}} ðŸ‘‰</a>
    {% endif %}
</div>
<div class="max-w-auto flex flex-wrap justify-center min-h-screen">
                <div class="inline-block min-w-full overflow-hidden">
                    <table class="min-w-full leading-normal">
                        <thead>
                            <tr>
                                <th
                                    class="px-4 py-3 border border-black bg-black text-white text-left font-serif font-semibold uppercase tracking-wider">
                                    Setup
                                </th>
                                <th
                                    class="hidden md:table-cell px-4 py-3 border border-black bg-black text-white text-left font-serif font-semibold uppercase tracking-wider">
                                    Author
                                </th>
                                <th
                                    class="hidden md:table-cell px-4 py-3 border border-black bg-black text-white text-left font-serif font-semibold uppercase tracking-wider">
                                    Date
                                </th>
                                <th
                                    class="hidden md:table-cell px-4 py-3 border border-black bg-black text-white text-left font-serif font-semibold uppercase tracking-wider">
                                    Components
                                </th>
                            </tr>
                        </thead>
                        <tbody>
  {% set st = stations %}
  {% for item in st  %}
  {% set products = item.products %}
                            <tr>
                                <td class="px-4 py-2 sm:px-2 sm:py-1 border-b border-l border-black bg-white text-sm">
                                    <div class="flex space-x-4 items-start">
                                        <div class="flex-none w-24 md:w-36 relative md:p-1">
                                            <a href="/{{ item.id }}">
                                            <img class="inset-0 w-full h-full object-cover"
                                                src="{{item.thumbnail}}"
                                                class="lazyload" 
                                                alt="{{item.title}}" />
                                            </a>
                                        </div>
                                        <div class="ml-4 md:hidden">
                                              <span class="flex-auto text-lg font-semibold">
                                                {{item.title | truncate(70)}}
                                              </span>
                                              <div class="my-2 font-semibold text-gray-500">
                                              This setup has 
                                                <span 
                                                 class="{{'font-bold' if item.amz == 0 else 'bg-black text-white p-1'}}">
                                                 {{ products | length }}</span> products inside
                                              </div>
                                              <div class="w-full flex-none text-sm font-medium text-gray-500 mt-2">
                                                {{item.date | dateISOtoFormat('DDD') }}
                                              </div>
                                          <div class="flex-auto flex space-x-3 py-3">
                                                <a class="p-2 w-full flex items-center justify-center rounded-md bg-blue-100 text-blue-800 font-semibold" href="/{{item.id}}">Setup Details</a>
                                            </div>
                                    </div>
                                        <div class="hidden md:flex md:flex-wrap">          
                                              <span class="flex-auto font-semibold text-gray-700">
                                                {{item.title | truncate(50)}}
                                              </span>
                                        </div>
                                    </div>
                                </td>
                                <td class="hidden md:table-cell px-4 py-3 border-b border-black bg-white text-sm">
                                    <a href="https://reddit.com/u/{{item.author}}" target="_blank" rel="noopener noreferrer" class="text-gray-900 no-underline whitespace-no-wrap">{{ item.author }}</a>
                                </td>
                                <td class="hidden md:table-cell px-4 py-3 border-b border-black bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">
                                    {{ item.date | dateISOtoFormat('DDD')}} </p>
                                </td>
                                <td class="hidden md:table-cell px-4 py-3 border-b border-r border-black bg-white text-sm">
                                    <a  href="/{{item.id}}"
                                        class="no-underline relative inline-block px-4 py-3 font-semibold {{ 'text-gray-900' if item.amz == 0 else 'text-green-600'  }} leading-tight">
                                        <span aria-hidden
                                            class="absolute inset-0 {{ 'bg-gray-200' if item.amz == 0 else 'bg-green-200'  }} opacity-50 rounded-full"></span>
                                        <span class="relative">{{ products | length }} components</span>
                                    </a>
                                </td>
                            </tr>
  {% endfor %}
                        </tbody>
                    </table>
                </div>
</div>
