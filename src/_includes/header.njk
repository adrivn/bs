<div class="mx-auto">
            <div x-data="{ open: false }" class="flex flex-col border-b border-black max-w-8xl px-4 mx-auto md:items-center md:justify-between md:flex-row md:px-6 lg:px-8">
            <div class="flex flex-row items-center justify-between p-4">
                <a href="/" class="text-2xl font-mono font-semibold tracking-widest text-gray-900 uppercase rounded-lg dark-mode:text-white focus:outline-none focus:shadow-outline">
                  {#{% include "logo.njk" %}#}
                  {{meta.title}}
                </a>
                <button class="rounded-lg md:hidden focus:outline-none focus:shadow-outline" @click="open = !open">
                    <svg fill="currentColor" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
            {#
            // Prueba del AlpineJS, funciona OK!
            <p x-data="{ conteo: 0}">
            <a href="#" x-on:click="conteo++">Increment</a>
            <span x-text="conteo"></span>
            </p>
            #}
            <nav :class="{'flex': open, 'hidden': !open}" class="flex-col flex-grow hidden pb-4 md:pb-0 md:flex md:justify-end md:flex-row md:space-x-4">
                {% for item in collections.all | eleventyNavigation %}
                    {%- set isCurrent = (item.url == page.url) -%}
                    {%- set isParent = item.url != '/' and item.url in page.url -%}
                <a href="{% if isCurrent %}#content{% else %}{{ item.url | url }}{% endif %}"
                  {% if isCurrent %}aria-current="page"{% endif %}
                 class="px-4 py-2 mt-2 font-mono font-semibold text-gray-900 md:mt-0 hover:text-gray-900 focus:text-gray-900 hover:underline hover:underline-offset-4 hover:decoration-2 focus:bg-gray-200 focus:outline-none focus:shadow-outline">{{item.title}}</a>
                {% endfor %}
            </nav>
        </div>
</div>